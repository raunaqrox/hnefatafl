doctype html
html(lang="en")
  head
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title tafl
    link(type="text/css", rel="stylesheet", href="/main.css")
    link(type="text/css", rel="stylesheet", href="/bootstrap.min.css")
    link(type="text/css", rel="stylesheet", href="/main.css")
    script(src="/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
    if confirm
      script(src="/vex.combined.min.js")
      link(type="text/css", rel="stylesheet", href="/vex.css")
      link(type="text/css", rel="stylesheet", href="/vex-theme-wireframe.css")
      script(src="/socket.io-1.3.5.js")
      script(type="text/javascript", src="/main.js")
  body
    if message
      .alert.alert-dismissible.alert-danger
        button(type="button" class="close" data-dismiss="alert") x
        strong #{message}
    if confirm
      .container-fluid
        block content
    else
      .container-fluid
      .col-md-3
      .col-md-5.confirm
        form(action="/room/#{name}", method="POST")
          input(type="password", class="form-control", name="password" placeholder="Enter room password")
          input(type="submit", class="btn btn-primary", value="Enter Room")
