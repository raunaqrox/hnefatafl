doctype html
html(lang="en")
  head
    title tafl
    link(type="text/css", rel="stylesheet", href="/main.css")
    if confirm
      link(type="text/css", rel="stylesheet", href="/vex-theme-flat-attack.css")
      script(src="/socket.io-1.3.5.js")
      script(src="/vex.min.js")
      script(type="text/javascript", src="/main.js")
  body
    h3(id="status")
    if message
      h1 #{message}
    if confirm
      block content
    else
      form(action="/room/#{name}", method="POST")
        input(type="password", name="password" placeholder="Enter room password")
        input(type="submit", value="Enter Room")
