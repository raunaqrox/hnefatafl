doctype html
html(lang="en")
  head
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title tafl
    link(type="text/css", rel="stylesheet", href="/main.css")
    if confirm
      script(src="/jquery.min.js")
      script(src="/vex.combined.min.js")
      link(type="text/css", rel="stylesheet", href="/vex.css")
      link(type="text/css", rel="stylesheet", href="/vex-theme-flat-attack.css")
      script(src="/socket.io-1.3.5.js")
      script(type="text/javascript", src="/main.js")
  body
    h3(id="status")
    if message
      .alert.alert-dismissible.alert-danger
        button(type="button" class="close" data-dismiss="alert") x
        strong #{message}
    if confirm
      block content
    else
      form(action="/room/#{name}", method="POST")
        input(type="password", name="password" placeholder="Enter room password")
        input(type="submit", value="Enter Room")
